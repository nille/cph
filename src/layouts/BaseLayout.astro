---
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
}

const { title = "My Copenhagen", description = "Personal recommendations for Copenhagen" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Inter+Tight:ital,wght@0,200;0,300;0,400;0,500;1,300;1,400&display=swap" rel="stylesheet">
  </head>
  <body class="bg-gray-50 text-gray-900 font-sans font-light text-body antialiased">
    <div class="min-h-screen flex flex-col">
      <header class="bg-white border-b border-gray-200 sticky top-0 z-10 shadow-sm">
        <nav class="max-w-5xl mx-auto px-6 py-4">
          <div class="flex items-center justify-between">
            <a href="/" class="text-h3 text-gray-900 hover:text-brand-600 transition-colors font-display font-semibold">
              My Copenhagen
            </a>
            <div class="flex items-center space-x-8">
              <a href="/places" class="text-body text-gray-700 hover:text-brand-600 hover:underline underline-offset-4 transition-all duration-200">Favourite places</a>
              <a href="/events" class="text-body text-gray-700 hover:text-brand-600 hover:underline underline-offset-4 transition-all duration-200">What's happening</a>
              <a href="/tips" class="text-body text-gray-700 hover:text-brand-600 hover:underline underline-offset-4 transition-all duration-200">Insider tips</a>
              <a href="/map" class="text-body text-gray-700 hover:text-brand-600 hover:underline underline-offset-4 transition-all duration-200">Map</a>
            </div>
          </div>
        </nav>
      </header>

      <main class="flex-1">
        <slot />
      </main>

      <footer class="bg-gray-100 border-t border-gray-200">
        <div class="max-w-5xl mx-auto px-6 py-12">
          <!-- Main footer content -->
          <div class="grid md:grid-cols-3 gap-8 mb-8">
            <!-- About section -->
            <div>
              <h3 class="text-h3 text-gray-900 mb-4 font-display">My Copenhagen</h3>
              <p class="text-body-sm text-gray-600 leading-relaxed">
                Personal recommendations from someone who calls Copenhagen home. 
                Discover the city beyond the guidebooks.
              </p>
            </div>
            
            <!-- Quick links -->
            <div>
              <h4 class="text-body font-medium text-gray-900 mb-3">Explore</h4>
              <nav class="space-y-2">
                <a href="/places" class="block text-body-sm text-gray-600 hover:text-brand-600 transition-colors">Favourite places</a>
                <a href="/events" class="block text-body-sm text-gray-600 hover:text-brand-600 transition-colors">What's happening</a>
                <a href="/tips" class="block text-body-sm text-gray-600 hover:text-brand-600 transition-colors">Insider tips</a>
                <a href="/map" class="block text-body-sm text-gray-600 hover:text-brand-600 transition-colors">Map</a>
              </nav>
            </div>
            
            <!-- Copenhagen info -->
            <div>
              <h4 class="text-body font-medium text-gray-900 mb-3">Copenhagen</h4>
              <div class="space-y-2 text-body-sm text-gray-600">
                <p>Capital of Denmark</p>
                <p>Population: 660,000</p>
                <p>Known for: Hygge, bikes & design</p>
                <p class="flex items-center">
                  <span class="mr-2">üö≤</span>
                  Bike-friendly since 1970s
                </p>
              </div>
            </div>
          </div>
          
          <!-- Bottom bar -->
          <div class="pt-6 border-t border-gray-200 flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
            <p class="text-body-sm text-gray-500">
              Made with ‚ù§Ô∏è for Copenhagen explorers
            </p>
            <div class="flex items-center space-x-6">
              <a href="/about" class="text-body-sm text-gray-500 hover:text-brand-600 transition-colors">About</a>
              <span class="text-body-sm text-gray-400">‚Ä¢</span>
              <span class="text-body-sm text-gray-500">Last updated {new Date().getFullYear()}</span>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>