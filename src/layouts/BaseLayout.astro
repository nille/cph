---
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
}

const { title = "My Copenhagen", description = "Personal recommendations for Copenhagen" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Courgette:wght@400&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
  </head>
  <body class="bg-eggshell-100 text-stone-900 font-sans leading-relaxed">
    <div class="min-h-screen flex flex-col">
      <header class="border-b border-lavender-200 bg-lavender-100/80 backdrop-blur-sm sticky top-0 z-10">
        <nav class="max-w-4xl mx-auto px-6 py-4 flex items-center justify-between">
          <a href="/" class="text-xl font-medium text-stone-900 hover:text-lavender-500 transition-colors font-courgette">
            My Copenhagen
          </a>
          <div class="flex space-x-8">
            <a href="/places" class="text-stone-700 hover:text-sage-500 transition-colors font-medium">Places</a>
            <a href="/events" class="text-stone-700 hover:text-sky-500 transition-colors font-medium">Events</a>
            <a href="/tips" class="text-stone-700 hover:text-lavender-500 transition-colors font-medium">Tips & Tricks</a>
            <a href="/map" class="text-stone-700 hover:text-peach-500 transition-colors font-medium">Map</a>
          </div>
        </nav>
      </header>

      <main class="flex-1">
        <slot />
      </main>

      <footer class="border-t border-sage-200 bg-sage-50">
        <div class="max-w-4xl mx-auto px-6 py-8">
          <p class="text-stone-600 text-sm">
            Made with ❤️ for Copenhagen • Personal recommendations and insights
          </p>
        </div>
      </footer>
    </div>
  </body>
</html>

<style>
  body {
    font-family: 'Libre Baskerville', Georgia, serif;
  }
</style>