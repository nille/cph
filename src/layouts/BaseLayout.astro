---
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
}

const { title = "My Copenhagen", description = "Personal recommendations for Copenhagen" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Courgette:wght@400&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
  </head>
  <body class="bg-cream-100 text-stone-900 font-sans leading-relaxed">
    <div class="min-h-screen flex flex-col">
      <header class="border-b border-rose-300 bg-rose-300/90 backdrop-blur-sm sticky top-0 z-10">
        <nav class="max-w-4xl mx-auto px-6 py-4 flex items-center justify-between">
          <a href="/" class="text-xl font-medium text-white hover:text-stone-100 transition-colors font-courgette">
            My Copenhagen
          </a>
          <div class="flex items-center space-x-6">
            <a href="/places" class="text-white hover:underline underline-offset-4 transition-all duration-200 font-medium tracking-wide font-sans">Places</a>
            <span class="text-white/60">◆</span>
            <a href="/events" class="text-white hover:underline underline-offset-4 transition-all duration-200 font-medium tracking-wide font-sans">Events</a>
            <span class="text-white/60">◆</span>
            <a href="/tips" class="text-white hover:underline underline-offset-4 transition-all duration-200 font-medium tracking-wide font-sans">Tips & Tricks</a>
            <span class="text-white/60">◆</span>
            <a href="/map" class="text-white hover:underline underline-offset-4 transition-all duration-200 font-medium tracking-wide font-sans">Map</a>
          </div>
        </nav>
      </header>

      <main class="flex-1">
        <slot />
      </main>

      <footer class="border-t border-mint-200 bg-mint-50">
        <div class="max-w-4xl mx-auto px-6 py-8">
          <p class="text-stone-600 text-sm text-center">
            Made with ❤️ for Copenhagen • Personal recommendations and insights
          </p>
        </div>
      </footer>
    </div>
  </body>
</html>

<style>
  body {
    font-family: 'Libre Baskerville', Georgia, serif;
  }
</style>