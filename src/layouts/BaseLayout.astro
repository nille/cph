---
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
}

const { title = "My Copenhagen", description = "Personal recommendations for Copenhagen" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Inter+Tight:ital,wght@0,200;0,300;0,400;0,500;1,300;1,400&display=swap" rel="stylesheet">
  </head>
  <body class="bg-gray-50 text-gray-900 font-sans font-light text-body antialiased">
    <div class="min-h-screen flex flex-col">
      <header class="bg-white border-b border-gray-200 sticky top-0 z-10 shadow-sm">
        <nav class="max-w-5xl mx-auto px-6 py-4">
          <div class="flex items-center justify-between">
            <a href="/" class="text-h3 text-gray-900 hover:text-brand-600 transition-colors font-display font-semibold">
              My Copenhagen
            </a>
            <div class="flex items-center space-x-8">
              <a href="/places" class="text-body text-gray-700 hover:text-brand-600 hover:underline underline-offset-4 transition-all duration-200">Favourite places</a>
              <a href="/events" class="text-body text-gray-700 hover:text-brand-600 hover:underline underline-offset-4 transition-all duration-200">What's happening</a>
              <a href="/tips" class="text-body text-gray-700 hover:text-brand-600 hover:underline underline-offset-4 transition-all duration-200">Insider tips</a>
              <a href="/map" class="text-body text-gray-700 hover:text-brand-600 hover:underline underline-offset-4 transition-all duration-200">Map</a>
            </div>
          </div>
        </nav>
      </header>

      <main class="flex-1">
        <slot />
      </main>

      <footer class="bg-gray-100 border-t border-gray-200">
        <div class="max-w-5xl mx-auto px-6 py-8">
          <p class="text-body-sm text-gray-500 text-center">
            Personal recommendations for Copenhagen
          </p>
        </div>
      </footer>
    </div>
  </body>
</html>