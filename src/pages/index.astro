---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="My Copenhagen" description="Personal recommendations for the beautiful city of Copenhagen">
  <!-- Hero Section with full-width background -->
  <section class="py-20 text-center relative overflow-hidden" style="width: 100vw; margin-left: calc(50% - 50vw);">
    <!-- Copenhagen Lakes background photo spanning full viewport -->
    <div class="absolute inset-0 opacity-20 pointer-events-none">
      <img 
        src="/copenhagen-lakes.jpg" 
        alt="Copenhagen cityscape and skyline by the Copenhagen Lakes" 
        class="w-full h-full object-cover hero-bg-image"
        style="filter: grayscale(20%) brightness(1.1); object-position: center 30%;"
      />
    </div>
    
    <div class="max-w-3xl mx-auto relative z-10 px-6">
      <!-- Typography-first approach for readability -->
      <div class="p-8">
        <h1 class="text-display-1 text-gray-900 mb-6" style="font-weight: 900; font-size: 4rem; line-height: 1.1; color: #111827;">
          My Copenhagen
        </h1>
        <p class="text-h2 text-gray-800 mb-8" style="font-weight: 600; font-size: 1.875rem; line-height: 1.2;">
          A curated collection of places, experiences, and hidden gems that make Copenhagen special.
        </p>
        <div class="w-32 h-1 bg-gray-900 mx-auto rounded"></div>
      </div>
    </div>
  </section>

  <div class="max-w-5xl mx-auto px-6">

    <!-- Categories Grid -->
    <section class="py-16">
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 flowing-gradient-bg">
        <a href="/places" class="group block h-full">
          <div class="rounded-lg shadow-lg border border-white/40 backdrop-blur-md p-6 hover:shadow-xl hover:border-white/60 hover:-translate-y-2 hover:rotate-1 transition-all duration-500 h-full flex flex-col bg-white/70">
            <div class="w-14 h-14 rounded-xl flex items-center justify-center mb-4 transition-all duration-300 shadow-md" style="background: linear-gradient(135deg, #f97316, #dc2626);">
              <!-- Heart icon for favorite places -->
              <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12,21.35L10.55,20.03C5.4,15.36 2,12.27 2,8.5 2,5.41 4.42,3 7.5,3C9.24,3 10.91,3.81 12,5.08C13.09,3.81 14.76,3 16.5,3C19.58,3 22,5.41 22,8.5C22,12.27 18.6,15.36 13.45,20.04L12,21.35Z"/>
              </svg>
            </div>
            <h3 class="text-h3 text-gray-800 mb-2 font-display">Favourite places</h3>
            <p class="text-body-sm text-gray-600">
              Cafés, restaurants, museums, parks, and unique spots around the city.
            </p>
          </div>
        </a>

        <a href="/events" class="group block h-full">
          <div class="rounded-lg shadow-lg border-2 border-white/40 backdrop-blur-md p-6 hover:shadow-xl hover:border-white/60 hover:-translate-y-2 hover:-rotate-1 transition-all duration-500 h-full flex flex-col bg-white/70">
            <div class="w-14 h-14 rounded-xl flex items-center justify-center mb-4 transition-all duration-300 shadow-md" style="background: linear-gradient(135deg, #8b5cf6, #7c3aed);">
              <!-- Calendar star icon for events -->
              <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12,17.27L18.18,21L16.54,13.97L22,9.24L14.81,8.62L12,2L9.19,8.62L2,9.24L7.45,13.97L5.82,21L12,17.27Z"/>
              </svg>
            </div>
            <h3 class="text-h3 text-gray-800 mb-2 font-display">What's happening</h3>
            <p class="text-body-sm text-gray-600">
              Festivals, exhibitions, and seasonal events throughout the year.
            </p>
          </div>
        </a>

        <a href="/tips" class="group block h-full">
          <div class="rounded-lg shadow-lg border border-white/40 backdrop-blur-md p-6 hover:shadow-xl hover:border-white/60 hover:-translate-y-2 hover:rotate-1 transition-all duration-500 h-full flex flex-col bg-white/70">
            <div class="w-14 h-14 rounded-xl flex items-center justify-center mb-4 transition-all duration-300 shadow-md" style="background: linear-gradient(135deg, #10b981, #059669);">
              <!-- Lightbulb icon for insider tips -->
              <svg class="w-7 h-7 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12,2A7,7 0 0,0 5,9C5,11.38 6.19,13.47 8,14.74V17A1,1 0 0,0 9,18H15A1,1 0 0,0 16,17V14.74C17.81,13.47 19,11.38 19,9A7,7 0 0,0 12,2M9,21A1,1 0 0,0 10,22H14A1,1 0 0,0 15,21V20H9V21Z"/>
              </svg>
            </div>
            <h3 class="text-h3 text-gray-800 mb-2 font-display">Insider tips</h3>
            <p class="text-body-sm text-gray-600">
              Practical advice and insider knowledge for living in Copenhagen.
            </p>
          </div>
        </a>

        <a href="/map" class="group block h-full">
          <div class="rounded-lg shadow-lg border-2 border-white/40 backdrop-blur-md p-6 hover:shadow-xl hover:border-white/60 hover:-translate-y-2 hover:-rotate-1 transition-all duration-500 h-full flex flex-col bg-white/70">
            <div class="w-14 h-14 rounded-xl flex items-center justify-center mb-4 transition-all duration-300 shadow-md" style="background: linear-gradient(135deg, #3b82f6, #1d4ed8);">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
              </svg>
            </div>
            <h3 class="text-h3 text-gray-800 mb-2 font-display">Map</h3>
            <p class="text-body-sm text-gray-600">
              Interactive map showing all recommended locations across Copenhagen.
            </p>
          </div>
        </a>
      </div>
    </section>

    <!-- Introduction -->
    <section class="py-16 border-t border-gray-200">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-h1 text-gray-900 mb-6">About This Guide</h2>
        <p class="text-body text-gray-700 leading-relaxed">
          Living in Copenhagen has given me the opportunity to explore beyond the typical tourist attractions. 
          This collection represents places and experiences that have genuinely enriched my time here—from 
          quiet morning walks in lesser-known parks to discovering that perfect café for afternoon coffee.
        </p>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  /* Hero background image loading animation */
  .hero-bg-image {
    opacity: 0;
    transition: opacity 0.8s ease-in-out;
  }
  
  .hero-bg-image.loaded {
    opacity: 1;
  }

  /* Gradient animations */
  @keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }
  
  @keyframes radial-pulse {
    0%, 100% { background-size: 100% 100%; }
    50% { background-size: 130% 130%; }
  }
  
  @keyframes diagonal-flow {
    0% { background-position: 0% 0%; }
    50% { background-position: 100% 100%; }
    100% { background-position: 0% 0%; }
  }
  
  .animated-radial {
    background-size: 250% 250%;
    animation: radial-pulse 5s ease-in-out infinite;
  }
  
  .animated-diagonal {
    background-size: 400% 400%;
    animation: diagonal-flow 7s ease-in-out infinite;
  }
  
  .animated-vertical {
    background-size: 100% 300%;
    animation: gradient-shift 6s ease-in-out infinite;
  }
  
  .animated-map {
    background-size: 350% 350%;
    animation: diagonal-flow 8s ease-in-out infinite reverse;
  }

  /* Flowing gradient background */
  @keyframes flowing-gradient {
    0% { 
      background-position: 0% 0%; 
    }
    25% { 
      background-position: 100% 0%; 
    }
    50% { 
      background-position: 100% 100%; 
    }
    75% { 
      background-position: 0% 100%; 
    }
    100% { 
      background-position: 0% 0%; 
    }
  }

  .flowing-gradient-bg {
    background: linear-gradient(135deg, 
      #e8f4f8, #d1e7f0, #b8dae8, #a0cde0,
      #f5f1e8, #ede4d3, #e5d7be, #dcc9a3,
      #e8f4f8, #d1e7f0);
    background-size: 300% 300%;
    animation: flowing-gradient 25s ease-in-out infinite;
    position: relative;
    border-radius: 1rem;
    padding: 2rem;
  }
</style>

<script>
  // Animate hero background image on load
  document.addEventListener('DOMContentLoaded', () => {
    const heroImage = document.querySelector('.hero-bg-image');
    
    if (heroImage) {
      // If image is already loaded (cached)
      if (heroImage.complete) {
        heroImage.classList.add('loaded');
      } else {
        // Wait for image to load
        heroImage.addEventListener('load', () => {
          heroImage.classList.add('loaded');
        });
      }
    }
  });
</script>
